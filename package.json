{
  "name": "@triforce-heroes/triforce-core",
  "description": "Triforce Core libraries.",
  "version": "1.0.0",
  "license": "Apache License 2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json && swc ./dist -d ./dist",
    "dev": "tsx ./src/index.ts",
    "dev:watch": "tsx watch ./src/index.ts",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint --fix ./src",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@types/json-diff": "^1.0.2",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^1.1.3",
    "chalk": "^5.3.0",
    "json-diff": "^1.0.6",
    "rimraf": "^5.0.5",
    "strip-ansi": "^7.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "peerDependencies": {
    "commander": "^11.1.0"
  }
}
